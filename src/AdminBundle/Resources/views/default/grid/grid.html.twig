{% extends '@Admin/default/layout.html.twig' %}
{% block h1 %}{{ title }}{% endblock %}
{% block content %}
            <div style="margin-bottom: 15px">
                {% for btn in buttons %}
                    <a title="{{ btn['title'] }}" href="{{ path(btn['route'], {action: btn['action']}) }}"><button type="button" class="{{ btn['btnstyle'] }}" >{{ btn['title'] }}</button></a>
                {% endfor %}
            </div>
            <div class="row">
            

                <div class="col-lg-12">
                <div class="form-group input-group">
                                            <input class="form-control" type="text">
                                            <span class="input-group-btn">
                                                <button class="btn btn-default" type="button"><i class="fa fa-search"></i>
                                                </button>
                                            </span>
                                        </div></div></div>
            <!-- /.row -->
            {% if paginator %}
            {% block paginator_title %}
                {% include '@Admin/default/grid/paginator_title.html.twig' with {paginator: paginator} %}
            {% endblock %}
            {% endif %}
            {% if rows %}
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-body">
                            <div class="table-responsive">
                                <table class="table table-striped table-bordered table-hover dataTable no-footer dtr-inline">
                                    <thead>
                                        <tr>
                                            {% for field in fields %}
                                                <th {% if (sortby == field['name']) %}class="sorting_{{ sorttype }}"{% endif %} {% if field['style']|default('0') %}style="{{ field['style'] }}"{% endif %} ><a sort-by="{{ field['name'] }}" href="javascript:void(0)">{{ field['label'] }}</a></th>
                                            {% endfor %}
                                            {% if actions %}
                                                <th></th>
                                            {% endif %}
                                        </tr>
                                    </thead>
                                    <tbody>
										{% for item in rows %}
                                        <tr>
                                            {% for field in fields %}
                                                <td style="vertical-align: middle">{{ attribute(item, field['name']) }}</td>
                                            {% endfor %}       
                                            {% if actions %}
											<td class="col-lg-1">
                                                {% for action in actions %}
                                                    <a title="{{ action['title'] }}" href="{{ path(action['route'], {id: attribute(item, action['field_id']), action: action['action']}) }}" onClick="{{ action['onclick'] }}" ><button type="button" class="btn {{ action['btntype'] }} btn-circle"><i class="{{ action['icon'] }}"></i></button></a>
                                                {% endfor %}
                                            </td>
                                            {% endif %}
                                        </tr>
										{% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            {% endif %}
            <!-- /.row -->
            {% if paginator %}
                {% block paginator_body %}
                    {% include '@Admin/default/grid/paginator_body.html.twig' with {paginator: paginator} %}
                {% endblock %}
            {% endif %}


        </div>
        <!-- /#page-wrapper -->
{% endblock %}

